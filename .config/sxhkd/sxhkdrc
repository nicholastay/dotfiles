# nick's sxhkd config
# basically just use this for wm independent stuffs!

# reload sxhkd
super + F12
	pkill -USR1 -x sxhkd && notify-send "sxhkd" "Reloaded sxhkd bindings."
# super + shift + F12 is relaunching the wm itself, handled in it

# lock
super + Delete
	xscreensaver-command -lock

# programs
super + Return
	$TERMINAL
super + shift + Return
	termdir
super + e
	$TERMINAL -e $FILE
super + shift + e
	sdmenu
super + control + e
	nautilus
super + space
	dmenu_run
super + alt + space
	j4-dmenu-desktop
super + w
	$BROWSER
# hard force quit
super + shift + control + q
	kill -9 `xdotool getwindowfocus getwindowpid`
super + a
	pavucontrol
super + p
	keepassxc
super + shift + p
	$TERMINAL -n floater -g 120x34 -e htop
super + control + p
	$TERMINAL -n floater -g 120x34 -e sudo powertop
super + alt + p
	$TERMINAL -n floater -g 120x34 -e bashtop
super + shift + a
	$TERMINAL -n floater -g 120x34 -e pulsemixer
super + shift + n
	joplin-desktop
super + control + n
	p3x-onenote
super + n
	$TERMINAL -n floater -g 120x34 -e ncmpcpp
super + {control,alt} + n
	mpdshuffle{_, stop}
super + shift + u
	usbguardmenu
super + m
	thunderbird
	#$TERMINAL -e neomutt
super + c
	caprine
	#$TERMINAL -e bc -l
super + shift + c
	gnome-calculator
super + control + c
	$TERMINAL -n floater -g 120x34 -e octave
super + shift + o
	libreoffice
super + control + o
	obs
super + d
	discord
super + shift + d
	displayselect
super + control + r
	deepin-screen-recorder
# compositor transparency on any program
super + F4
	transset-df -m 0.87 -a
# mail
super + F8
	notify-send "sxhkd (mail)" "Syncing mail..." && mailsync
super + F3
	launchpersonal

# System hotkeys
{_,shift + ,super + }XF86MonBrightness{Down,Up}
	xbacklight {-dec 10,-dec 2,-set 0,-inc 10,-inc 2,-set 100}
{_,shift + }XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-5%,-1%,+5%,+1%}; kill -43 $(pidof dwmblocks)
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle; kill -43 $(pidof dwmblocks)
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86Display
	displayselect
XF86ScreenSaver
	light-locker-command -l
XF86TouchpadToggle
	touchpadtoggle

# Script menus
super + {shift,control} + m
	{_,u}mountmenu
{_,shift + ,control + }Print
	screenshot {_,rect,window}
super + {shift,control,alt} + s
	screenshot {rect,window,_}
super + alt + shift + s
	screenshot rect nosave
super + control + shift + s
	deepin-screenshot


# Music controls
super + {Left,Right}
	mpc {prev,next}
super + slash
	mpc toggle
super{_, + shift} + {Up,Down}
	mpdvolpop {+5,+1,-5,-1}
XF86Audio{Play,Stop,Prev,Next}
	mpc {toggle,stop,prev,next}
