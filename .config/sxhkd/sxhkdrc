# nick's sxhkd config

# reload sxhkd
super + F12
	pkill -USR1 -x sxhkd && notify-send "sxhkd" "Reloaded sxhkd bindings."
# super + shift + F12 is relaunching the wm itself, handled in it

# BSPWM
# Focus/move ws
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
# Follow move ws
super + shift + ctrl + {1-9,0}
	bspc node -d '^{1-9,10}' --follow

# Focus window/move
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Quit
super + shift + q
	bspc node -c

# Reload
super + shift + F10
	bspc wm -r

# Fullscreen
super + f
	bspc node -t '~fullscreen'

# Preselects
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + s
	bspc node -p south
# Cancel preselect
super + ctrl + space
	bspc node -p cancel
# Preselect size
super + ctrl + {1-9}
	bspc node -o 0.{1-9}
# Move to preselected
super + m
        bspc node -n last.!automatic

# Resize window
super + alt + {h,j,k,l}
	bspc node -z {left -20 0 || bspc node -z right -20 0, \
				  bottom 0 20 || bspc node -z top 0 20,\
				  top 0 -20 || bspc node -z bottom 0 -20,\
				  right 20 0 || bspc node -z left 20 0}

# Move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Toggle float
super + shift + space
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# Reload desknamer
super + shift + F11
	pkill -f desknamer && setsid desknamer && notify-send "desknamer (sxhkd)" "desknamer reloaded."


# --------------------------------
# WM independent

# lock
super + Delete
	xscreensaver-command -lock

# reload polybar
super + F11
	$HOME/.config/polybar/launch.sh

# programs
super + Return
	$TERMINAL
super + shift + Return
	termdir
super + e
	$TERMINAL -e $FILE
super + shift + e
	sdmenu
super + control + e
	nautilus
super + space
	dmenu_run
super + alt + space
	j4-dmenu-desktop
super + w
	$BROWSER
# hard force quit
super + shift + control + q
	kill -9 `xdotool getwindowfocus getwindowpid`
super + a
	pavucontrol
super + p
	keepassxc
super + shift + p
	$TERMINAL -n floater -g 120x34 -e htop
super + control + p
	$TERMINAL -n floater -g 120x34 -e sudo powertop
super + alt + p
	$TERMINAL -n floater -g 120x34 -e bashtop
super + shift + a
	$TERMINAL -n floater -g 120x34 -e pulsemixer
super + shift + n
	joplin-desktop
super + control + n
	p3x-onenote
super + n
	$TERMINAL -n floater -g 120x34 -e ncmpcpp
super + {control,alt} + n
	mpdshuffle{_, stop}
super + shift + u
	usbguardmenu
super + shift + m
	thunderbird
	#$TERMINAL -e neomutt
super + c
	caprine
	#$TERMINAL -e bc -l
super + shift + c
	gnome-calculator
super + control + c
	$TERMINAL -n floater -g 120x34 -e octave
super + shift + o
	libreoffice
super + control + o
	obs
super + d
	discord
super + shift + d
	displayselect
super + control + r
	deepin-screen-recorder
# compositor transparency on any program
super + t
	transset-df -m 0.87 -a
# mail
super + F8
	notify-send "sxhkd (mail)" "Syncing mail..." && mailsync
super + F3
	launchpersonal

# System hotkeys
{_,shift + ,super + }XF86MonBrightness{Down,Up}
	xbacklight {-dec 10,-dec 2,-set 0,-inc 10,-inc 2,-set 100}
{_,shift + }XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-5%,-1%,+5%,+1%}; kill -43 $(pidof dwmblocks)
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle; kill -43 $(pidof dwmblocks)
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86Display
	displayselect
XF86ScreenSaver
	light-locker-command -l
XF86TouchpadToggle
	touchpadtoggle

# Script menus
super + {shift,control} + m
	{_,u}mountmenu
{_,shift + ,control + }Print
	screenshot {_,rect,window}
super + {shift,control,alt} + s
	screenshot {rect,window,_}
super + alt + shift + s
	screenshot rect nosave
super + control + shift + s
	deepin-screenshot


# Music controls
super + {Left,Right}
	mpc {prev,next}
super + slash
	mpc toggle
super{_, + shift} + {Up,Down}
	mpdvolpop {+5,+1,-5,-1}
XF86Audio{Play,Stop,Prev,Next}
	mpc {toggle,stop,prev,next}
