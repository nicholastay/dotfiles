# nick's sxhkd config

# ---------------------------
# i3 specific binds
# ---------------------------
# (yeah i know im using sxhkd for i3 lol.)
super + shift + q
	i3-msg kill
super + f
	i3-msg fullscreen toggle

# USE i3-ws (enzime tool) for multimon!
# basic workspace management
{_,shift + }super + {h,j,k,l}
	i3-msg {focus,move} {left,down,up,right}

super + s
	i3-msg split toggle
super + {semicolon,apostrophe}
	i3-msg split {h,v}
super + alt + {h,j,k,l}
	i3resize {left,down,up,right}

# window modes
super + {alt,shift,control} + t
	i3-msg layout {default,tabbed,stacking}
super + shift + space
	i3-msg floating toggle
# focuses between tiles/floats
super + control + space
	i3-msg focus mode_toggle

# workspace moves on THIS display / control moves to outputs
{_,shift + ,shift + control + ,control + }super + {1-9,0}
	i3-ws {--ws ,--ws --shift ,--shift ,_}{1-9,10}
# move and switch
super + alt + {1-9,0}
	i3wsmoveswitch {1-9,10}
# move monitor relative
super + shift + control + {h,l}
	i3-ws --shift {prev,next}
super + control + {h,l}
	i3-ws {prev,next}
super + Tab
	i3-msg workspace back_and_forth

# reload
super + shift + r
	i3-msg reload
super + control + r
	i3-msg restart

# misc
# term spawn float for convenience
super + control + Return
	$TERMINAL -name floater
super + u
	i3-msg scratchpad show
# scratchpad tmux if ded
super + control + u
	$TERMINAL -name quickterm -e tmux
# lock
super + Delete
	xidlehook-client --socket $HOME/.config/xidlehook.lock control --action Trigger --timer 1
	#light-locker-command -l
	#betterlockscreen -l dimblur
# .desktop launches
super + y
	i3-dmenu-desktop --dmenu='rofi -dmenu -i'



# ---------------------------
# generic binds
# ---------------------------

# General bindings
super + Return
	$TERMINAL
# same dir term spawn
super + shift + Return
	termdir 
super + e
	$TERMINAL -e ranger
super + shift + e
	sdmenu
super + space
	rofi -show run
super + alt + space
	rofi -show window
super + w
	$BROWSER
# hard force quit
super + shift + control + q
	kill -9 `xdotool getwindowfocus getwindowpid`
super + a
	pavucontrol
super + p
	keepassxc
super + shift + p
	$TERMINAL -name floater -e htop
super + control + p
	$TERMINAL -name floater -e sudo powertop
super + shift + a
	$TERMINAL -name floater -e pulsemixer
super + shift + n
	notekit
super + n
	$TERMINAL -name floater -e ncmpcpp
super + {control,alt} + n
	mpdshuffle{_, stop}
super + m
	$TERMINAL -e neomutt
super + c
	caprine
	#$TERMINAL -e bc -l
super + shift + c
	gnome-calculator
super + control + c
	$TERMINAL -name floater -e octave
super + shift + o
	obs
super + b
	barrier
super + d
	discord
super + shift + d
	displayselect
super + r
	peek
# compositor transparency on any program
super + t 
	transset-df -m 0.95 -a
# mail
super + F8
	notify-send "sxhkd (mail)" "Syncing mail..." && mailsync

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd && notify-send "sxhkd" "Reloaded sxhkd bindings."

# System hotkeys
{_,shift + ,super + }XF86MonBrightness{Down,Up}
	xbacklight {-dec 2,-dec 10,-set 0,-inc 2,-inc 10,-set 100}
{_,shift + }XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume @DEFAULT_SINK@ {-5%,-1%,+5%,+1%}
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# Script menus
super + {shift,control} + m
	{_,u}mountmenu
{_,shift + ,control + }Print
	screenshot {_,rect,window}
super + {shift,control,alt} + s
	screenshot {rect,window,_}
super + alt + shift + s
	screenshot rect nosave


# Music controls
super + {Left,Right}
	mpc {prev,next}
super + slash
	mpc toggle
super{_, + shift} + {Up,Down}
	mpdvolpop {+5,+1,-5,-1}
XF86Audio{Play,Stop,Prev,Next}
	mpc {toggle,stop,prev,next}
